# bg
set $bgd        #282828
set $bgs        #32302f
set $bg1        #3c3836
set $bg2        #504945
set $bg3        #665c54
# fg
set $fg3        #bdae93
set $fg2        #d5c4a1
set $fg1        #ebdbb2
set $fg0        #fbf1c7
# colors
set $red        #cc241d
set $green      #b8bb26
set $yellow     #fabd2f
set $blue       #83a598
set $purple     #d3869b
set $aqua       #83c07c
set $orange     #d65d0e

# class border          |border |backgr |text   |indicator  |child_border
client.focused          $blue   $blue   $bgs    $orange     $blue
client.focused_inactive $bg2    $bg2    $fg3    $fg3        $bg2
client.unfocused        $bg2    $bgd    $fg3    $bg3        $bg2
client.urgent           $red    $red    $bgs    $red        $red

################################
# Inputs ######################
################################

input type:keyboard {
  repeat_delay 400
  repeat_rate 50
}

input type:pointer {
    scroll_factor 3.0
    dwt enable
}

include /etc/sway/config.d/*

